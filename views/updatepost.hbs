<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-2'></div>
    <div class='col-md-10'>

      <form class="form-horizontal" action='/updatepost/{{id}}/repost' method='post'>
        <div class="form-group">
          <h3 class='row specialh3'>Update Post</h3>
          <label for="title" class="col-sm-2 control-label">Update Title</label>
          <div class="col-sm-6">
            <textarea class="form-control" id="title" name='title' >{{title}}</textarea>
          </div>
        </div>

        <div class="form-group">
          <label for="title" class="col-sm-2 control-label">Update Image</label>
          <div class="col-sm-6">
            <textarea type="text" class="form-control" id="image" name='image'> {{image}}</textarea>
          </div>
        </div>

        <div class="form-group">
          <label for="body" class="col-sm-2 control-label">Update Content</label>
          <div class="col-sm-6">
            <textarea type="text" class="form-control" id="body" name='body'>{{body}}
            </textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-default" value='Update Post'></input>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
