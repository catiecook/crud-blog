<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-2'></div>
    <div class='col-md-8'>

      {{#each blogs}}
        <div class:'col-md-2'></div>
        <div class="col-md">
          <h2>{{title}}</h2>
          <strong>Posted by: {{user_id}} </strong>
          <br>
          <img src="{{image}}">
          <p>{{body}}</p>
        </div>
        <div class:'col-md-2'></div>
        <hr>
        <span>
          <a href='/edit/{{id}}'>Edit Post</a>
          <a href='/delete'>Delete Post</a>  
        </span>
        <hr>

      {{/each}}

    </div>
  </div>


  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <!-- <p>Comments ( {{comments.length}} )</p> -->
      <p> Comments </p>

      {{#each comments}}
        <strong>Posted by: {{user_id}}</strong>
        <p>{{body}}</p>
      {{/each}}
      <br>
    </div>
  </div>


    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-8">

    <form class="form-horizontal" action='/single-blog/{{id}}' method='post'>

      <div class="form-group">
        <h4 class='row specialh3'>Create Comment</h4>
        <div class="col-sm-6">
          <textarea type="text" class="form-control" id="body" name='commentBody' placeholder="Comment goes here...Be nice"></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10"></div>
      </div>
      <!-- submit button -->
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <input type="submit" class="btn btn-default" value='Comment'></input>
        </div>
      </div>
    </form>

    <div class:'col-md-2'></div>
  </div>
</div>
</div>
