<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-2'></div>

    <div class='col-md-10'>

      <form class="form-horizontal" id='post' action='/post' method='post'>
        <div class="form-group">
          <h3 class='row specialh3'>New Post</h3>
          <label for="title" class="col-sm-2 control-label">Title</label>
          <div class="col-sm-6">
            <input type="title" class="form-control" id="title" name='title' placeholder="Post Title"></input>
          </div>
        </div>

        <div class="form-group">
          <label for="body" class="col-sm-2 control-label">Write Post</label>
          <div class="col-sm-6">
            <textarea type="text" class="form-control" id="body" name='body' placeholder="Blog post goes here...">
            </textarea>
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
          </div>
        </div>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-10">
            <input type="submit" class="btn btn-default" value='Make Post'></input>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
